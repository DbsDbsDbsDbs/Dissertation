<LogInPage>
    name : "login"
    email1:email1
    password1:password1
    MDCard:
        id: mainCard
        orientation: "vertical"
        pos_hint:{"center_x":0.5, "center_y": .5}
        padding: [50, 0, 50, 0 ]
        spacing: 15
        BoxLayout:
            orientation: "vertical"


            MDLabel:
                text: "ArchBit"
                text_size: self.size
                font_size:45
                bold:True
                halign: "center"
                valign:"center"

            MDLabel:
                text:"[color=00FF00]SIGN IN"
                text_size: self.size
                bold:True
                markup:True
                halign: "center"
                valign:"center"
            MDTextField:
                id: email1
                hint_text: "email"
            MDTextField:
                id : password1
                hint_text: "password"
                password: True
            MDFillRoundFlatButton:
                text:"Sign in"
                pos_hint:{"center_x":0.5}
                on_release:
                    if root.verify_login(): root.manager.current = "mainpage"
            MDRectangleFlatButton:
                text:"Sign up"
                pos_hint:{"center_x":0.5}
                on_release:
                    root.manager.current = "signup"
                    root.manager.transition.direction = "left"
